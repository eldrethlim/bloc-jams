<div class='player-bar' ng-show="SongPlayer.revealBar">
  
  <div class='container'>
    
    <div class='play-controls player-bar-control-group left-controls'>
      <a class='previous' ng-click="SongPlayer.previous()">
        <i class='fa fa-backward'></i>
      </a>
      <a class='play-pause'>
        <i class='fa fa-play' ng-show="!SongPlayer.playing" ng-click="SongPlayer.play()"></i>
        <i class='fa fa-pause' ng-show="SongPlayer.playing" ng-click="SongPlayer.pause()"></i>
      </a>
      <a class='next' ng-click="SongPlayer.next()">
        <i class='fa fa-forward'></i>
      </a>
    </div>
    
    <div class='currently-playing player-bar-control-group'>
      <h2 class='song-name'> {{ SongPlayer.currentSong.title }}</h2>
      
      <div class='seek-control'>
        <slider id="song-slider" value='{{playTime}}' max='{{SongPlayer.currentSong.duration}}' on-change='SongPlayer.seek(value)'></slider>
        
        <div class='current-time'> {{ playTime | minutesAndSeconds }}</div>
        
        <div class='total-time'> {{ SongPlayer.currentSong.duration | minutesAndSeconds }} </div>
      </div>
      <h3 class='artist-name'> {{ SongPlayer.currentAlbum.author }} </h3>
    </div>
    
    <div class='right-controls player-bar-control-group'>
      
      <div class='volume'>
        <i class='fa' ng-class='volumeClass()'></i>
        <slider id="volume-slider" value='{{ SongPlayer.volume }}' max='100' on-change='SongPlayer.setVolume(value)'></slider>
      </div>
      
      <div class='queue-toggle'>
        <a>
          <ul>
            <li><i class='fa fa-times' ng-click="SongPlayer.stopSongAndClosePlayerBar()"></i></li>
            <br>
            <li><i class='fa fa-list-ul'></i></li>
          </ul>
        </a>
      </div>

    </div>

  </div>

</div>