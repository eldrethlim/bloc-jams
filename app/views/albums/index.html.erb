<% content_for :body_class, 'collection' %>

<div class="collection-container container">
  <% @albums.in_groups_of(6, false).each do |row| %>
    <div class='row'>
      <% row.each do |album| %>
        <div class="collection-album-container col-md-2">
          <%= image_tag "album-placeholder.png" %>
          <div class="collection-album-info caption">
            <p>
              <%= link_to album.title, album_path(album), class: 'album-name' %></a>
              <br/>
              <%= link_to album.author, album_path(album)%> </a>
              <br/>
              <%= album.songs.count %>
              <br/>
            </p>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <% will_paginate @albums %>
</div>